<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="#fffff13e">

    <EditText
        android:id="@+id/temhigh"
        android:inputType="textEmailAddress"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignStart="@+id/temlow"
        android:layout_alignEnd="@+id/temlow"
        android:text="28" />
    <EditText
        android:id="@+id/temlow"
        android:inputType="textEmailAddress"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:fontFamily="sans-serif"
        android:layout_toEndOf="@+id/textView12"
        android:layout_below="@+id/temhigh"
        android:text="25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="最高溫度:"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/temhigh"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="最低溫度:"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/temlow"
        android:layout_toStartOf="@+id/temlow" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b3"
        android:background="@drawable/confirm2"
        android:layout_below="@+id/temlow"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView6"
        android:src="@drawable/c"
        android:layout_above="@+id/temlow"
        android:layout_alignEnd="@+id/temhigh"
        android:layout_marginEnd="46dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView7"
        android:src="@drawable/c"
        android:layout_alignBottom="@+id/temlow"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6" />

</RelativeLayout>