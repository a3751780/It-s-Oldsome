<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.microsoft.band.sdksample.Temfragment"
    android:background="#ffed1c24"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tem"
        android:layout_alignTop="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定體表溫門檻值"
        android:id="@+id/b2"
        android:background="#ffffe750"
        android:textSize="20sp"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="老人目前體表溫為:"
        android:id="@+id/textView16"
        android:layout_below="@+id/t1"
       />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView9"
        android:src="@drawable/kum"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/b2" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView10"
        android:src="@drawable/conver1"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>